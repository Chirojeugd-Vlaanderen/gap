  <!-- Gebruikte web services voor de backend -->
  
  <system.serviceModel>
    <behaviors>
      <endpointBehaviors>
        <behavior name="Chiro.Gap.Diagnostics.WebApp.Models.FunctiesIndexModelAspNetAjaxBehavior">
          <enableWebScript />
        </behavior>
      </endpointBehaviors>
    </behaviors>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true"
      multipleSiteBindingsEnabled="true" />
    <services>
      <service name="Chiro.Gap.Diagnostics.WebApp.Models.FunctiesIndexModel">
        <endpoint address="" behaviorConfiguration="Chiro.Gap.Diagnostics.WebApp.Models.FunctiesIndexModelAspNetAjaxBehavior"

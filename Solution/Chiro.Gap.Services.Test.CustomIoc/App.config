					      mapTo="Chiro.Gap.Dummies.DummyAbonnementenDao, Chiro.Gap.Dummies" />
          <type type="Chiro.Gap.Orm.DataInterfaces.IGavDao, Chiro.Gap.Orm"
					      mapTo="Chiro.Gap.Dummies.DummyGavDao, Chiro.Gap.Dummies" />

          <!-- Syncen is voor deze tests niet van belang -->
          <type type="Chiro.Gap.Orm.SyncInterfaces.IAdressenSync, Chiro.Gap.Orm"
					      mapTo="Chiro.Gap.Dummies.DummySync, Chiro.Gap.Dummies" />
          <type type="Chiro.Gap.Orm.SyncInterfaces.ICommunicatieSync, Chiro.Gap.Orm"
					      mapTo="Chiro.Gap.Dummies.DummySync, Chiro.Gap.Dummies" />
          <type type="Chiro.Gap.Orm.SyncInterfaces.IPersonenSync, Chiro.Gap.Orm"
					      mapTo="Chiro.Gap.Dummies.DummySync, Chiro.Gap.Dummies" />
          <type type="Chiro.Gap.Orm.SyncInterfaces.ILedenSync, Chiro.Gap.Orm"
					      mapTo="Chiro.Gap.Dummies.DummySync, Chiro.Gap.Dummies" />
          <type type="Chiro.Gap.Orm.SyncInterfaces.IDubbelpuntSync, Chiro.Gap.Orm"
					      mapTo="Chiro.Gap.Dummies.DummySync, Chiro.Gap.Dummies" />
          
          <!-- Mailen evenmin -->
          <type type="Chiro.Cdf.Mailer.IMailer, Chiro.Cdf.Mailer"
                mapTo="Chiro.Cdf.Mailer.FakeMailer, Chiro.Cdf.Mailer" />
          
        </types>
      </container>
    </containers>
  </unity>
</configuration>
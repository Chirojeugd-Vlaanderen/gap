<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="serviceHelper" type="Chiro.Adf.Configuration.AdfConfigurationSection, Chiro.Adf"/>
  </configSections>

  <!-- Twee service providers, om het moeilijk te maken.
       In dat geval worden ze voor het resolven van de service in volgorde afgelopen.  De eerste
       implementatie die wordt gevonden, wordt gebruikt. -->
  
  <serviceHelper>
    <serviceProviders>
      <add name="ioc" type="Chiro.Adf.IocServiceProvider, Chiro.Adf" />
      <add name="wcf" type="Chiro.Adf.ChannelFactoryServiceProvider, Chiro.Adf"/>
    </serviceProviders>
  </serviceHelper>
  
  <!-- We omschrijven hieronder alle services.  In de unit tests registreren we een mock
  voor 1 van de services.  Aangezien de ioc-provider eerst staat, moet die mock dan
  gebruikt worden ipv het endpoint hieronder -->

  <system.serviceModel>
    <bindings>
      <wsHttpBinding>
        <binding name="ChiroBindingConfiguration" sendTimeout="00:05:00" maxReceivedMessageSize="2000000"/>
      </wsHttpBinding>
    </bindings>
    <client>
      <endpoint address="http://localhost:2734/GroepenService.svc"
        binding="wsHttpBinding" bindingConfiguration="ChiroBindingConfiguration"
        contract="Chiro.Gap.ServiceContracts.IGroepenService"/>
      <endpoint address="http://localhost:2734/GelieerdePersonenService.svc"
				binding="wsHttpBinding" bindingConfiguration="ChiroBindingConfiguration"
				contract="Chiro.Gap.ServiceContracts.IGelieerdePersonenService"/>
      <endpoint address="http://localhost:2734/LedenService.svc"
				binding="wsHttpBinding"
				bindingConfiguration="ChiroBindingConfiguration"
				contract="Chiro.Gap.ServiceContracts.ILedenService"/>
      <endpoint address="http://localhost:2734/UitstappenService.svc"
				binding="wsHttpBinding"
				bindingConfiguration="ChiroBindingConfiguration"
				contract="Chiro.Gap.ServiceContracts.IUitstappenService"/>
    </client>
  </system.serviceModel>

</configuration>
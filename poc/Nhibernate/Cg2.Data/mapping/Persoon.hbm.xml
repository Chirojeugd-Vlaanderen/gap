<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true"
                   schema="pers" assembly="Cg2.Core"
                   namespace="Cg2.Core.Domain">
  <class name="Persoon" lazy="false">
    <id name="ID" access="nosetter.lowercase-underscore" column="PersoonID">
      <generator class="native" />
    </id>
    <property name="GeslachtsInt" column="Geslacht" />
    <property name="Naam" column="Naam" not-null="true" />
    <property name="VoorNaam" column="VoorNaam" />
    <property name="Versie" column="Versie" insert="false" update="false" />
    <property name="AdNummer" column="AdNummer" />
    <property name="GeboorteDatum" column="GeboorteDatum" />
    <property name="SterfDatum" column="SterfDatum" />
  </class>
</hibernate-mapping>